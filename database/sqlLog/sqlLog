CREATE TABLE WIKI_DOCUMENT(
    DOCUMENT_ID NUMBER(7) NOT NULL,
    TITLE VARCHAR(500) NOT NULL,
    ARTICLE CLOB,
    CREATED_DATE DATE NOT NULL,
    CREATED_USR VARCHAR(50) NOT NULL,
    UPDATED_DATE DATE,
    UPDATED_USR VARCHAR(50),
    CONSTRAINT PK_DOCUMENT PRIMARY KEY(DOCUMENT_ID)
);


CREATE SEQUENCE DOCUMENT_ID_SEQ

;



CREATE TABLE WIKI_CONTENTS(
    DOCUMENT_ID NUMBER(7) NOT NULL,
    CONTENTS_ID NUMBER(10),
    TITLE VARCHAR(500),
    ARTICLE CLOB,
    CREATED_DATE DATE,
    CREATED_USR VARCHAR(50),
    CONSTRAINT PK_CONTENTS PRIMARY KEY(CONTENTS_ID),
    CONSTRAINT FK_DOCUMENT_ID FOREIGN KEY(DOCUMENT_ID) REFERENCES WIKI_DOCUMENT (DOCUMENT_ID)
);

CREATE SEQUENCE CONTENTS_ID_SEQ

;